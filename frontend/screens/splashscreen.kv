MDScreen:
    #Set screen name
    name: "SplashScreen"
    #start the progress bar animation when the screen is active
    on_enter: self.ids.progress.start()

    #Add float layout
    FloatLayout:
        #Add image
        Image:
            source: 'assets/logo.png'
            allow_stretch: True
            anim_delay: 0
            #anim loop 1
            anim_reset: True

        #Add box layout
        BoxLayout:
            #set the box position
            pos_hint:{'center_y': 3, 'center_x':.5}
            padding: "10dp"
            #set width to 70%
            size_hint_x: .7

            #Add progress bar
            MDProgressBar:
                #set progress id
                id: progress
                #set orientation
                orientation: "horizontal"
                #set progress type
                type: "indeterminate"
                #progress duration
                running_duration: 1
                #catching duration
                catching_duration: 1
    