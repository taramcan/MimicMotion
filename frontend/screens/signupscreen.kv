MDScreen:
    name: "SignUpScreen"
    MDBoxLayout:
        MDBoxLayout:
            orientation: "vertical"
            padding: [100, 100, 100, dp(88)]
            orientation: "vertical"
            size_hint_y: 1
            Image:
                source: 'assets/logo.png'
                allow_stretch: True
            MDLabel:
                id: choose_user_name
                halign: "center"
                valign: "middle"
                text: "Enter your email address"
            TextInput:
                id: chosen_username_input
                multiline: False
                size_hint: (1, 0.5)
            MDLabel:
                id: choose_pw
                halign: "center"
                valign: "middle"
                text: "Choose a password"
            TextInput:
                id: chosen_pw_input
                multiline: False
                size_hint: (1, 0.5)
            Button:
                size_hint: (1, 0.5)
                font_size: 32
                text: "Sign in"
                on_press: app.sign_in()