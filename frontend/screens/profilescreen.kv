MDScreen:
    name: "ProfileScreen"
    MDBoxLayout:
        orientation: "vertical"
        padding: [0, 0, 0, dp(88)]
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 1
            MDLabel:
                text: "Name"
                halign: 'center'
            MDLabel:
                text: "Email"
                halign: 'center'

            Button:
                text: 'Edit Profile'
                size_hint_y: None
                height: 50
                on_press: root.edit_profile()