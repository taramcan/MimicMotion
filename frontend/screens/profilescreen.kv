MDScreen:
    name: "ProfileScreen"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: [dp(24), dp(88), dp(24), dp(24)]

        MDCard:
            orientation: "vertical"
            size_hint: 0.92, None
            adaptive_height: True
            padding: dp(24)
            spacing: dp(16)
            elevation: 0
            radius: [16, 16, 16, 16]

            MDLabel:
                text: "Profile"
                halign: "center"
                font_style: "H5"

            MDLabel:
                text: "Name"
                halign: "center"
                theme_text_color: "Secondary"

            MDLabel:
                id: profile_name_value
                text: "Not set"
                halign: "center"
                theme_text_color: "Primary"

            MDLabel:
                text: "Email"
                halign: "center"
                theme_text_color: "Secondary"

            MDLabel:
                id: profile_email_value
                text: "Not set"
                halign: "center"
                theme_text_color: "Primary"

            MDLabel:
                text: "Latest Symmetry Scores"
                halign: "center"
                theme_text_color: "Secondary"
            
            MDLabel:
                id: profile_last_session
                text: "No sessions recorded"
                halign: "center"
                theme_text_color: "Primary"

            ScrollView:
                size_hint_y: None
                height: dp(260)
                bar_width: dp(4)
                do_scroll_x: False

                MDGridLayout:
                    cols: 2
                    adaptive_height: True
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: dp(36)
                    row_force_default: True
                    spacing: [dp(12), dp(8)]
                    padding: [0, dp(4), 0, dp(4)]

                    MDLabel:
                        text: "Neutral"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_1
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Eyes Closed"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_2
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Eyes Shut"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_3
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Surprise"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_4
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Kiss"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_5
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Balloon"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_6
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Smile"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_7
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Wide Smile"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_8
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

                    MDLabel:
                        text: "Grin"
                        halign: "left"
                        text_size: self.size
                        theme_text_color: "Secondary"
                    MDLabel:
                        id: profile_score_9
                        text: "-"
                        halign: "right"
                        text_size: self.size
                        theme_text_color: "Primary"

            MDRectangleFlatButton:
                text: "Edit Profile"
                pos_hint: {"center_x": 0.5}
                on_release: app.go_to_edit_profile()
