MDScreen:
    name: "ProfileScreen"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: [dp(24), dp(88), dp(24), dp(24)]

        MDCard:
            orientation: "vertical"
            size_hint: 0.92, None
            adaptive_height: True
            padding: dp(24)
            spacing: dp(16)
            elevation: 0
            radius: [16, 16, 16, 16]

            MDLabel:
                text: "Name"
                halign: "center"
                theme_text_color: "Secondary"

            MDLabel:
                id: profile_name_value
                text: "Not set"
                halign: "center"
                theme_text_color: "Primary"

            MDLabel:
                text: "Email"
                halign: "center"
                theme_text_color: "Secondary"

            MDLabel:
                id: profile_email_value
                text: "Not set"
                halign: "center"
                theme_text_color: "Primary"

            MDRectangleFlatButton:
                text: "Edit Profile"
                pos_hint: {"center_x": 0.5}
                on_release: app.go_to_edit_profile()
